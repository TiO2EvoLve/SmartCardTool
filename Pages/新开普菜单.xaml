<Window x:Class="WindowUI.Pages.新开普菜单"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="新开普菜单" Height="500" Width="600">
    <Grid>
        <Border BorderBrush="#FFF6F6F6" BorderThickness="5" CornerRadius="10,10,10,10" Margin="10"
                Background="#FFFEFEFE">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ui:CardControl Width="400" Icon="{ui:SymbolIcon Earth16}">
                    <ui:CardControl.Header>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <ComboBox
                            x:Name="LocationComboBox"
                            SelectionChanged="ComboBox_SelectionChanged"
                            MinWidth="200"
                            HorizontalAlignment="Left"
                            SelectedIndex="0"
                            IsEditable="True">
                        </ComboBox>
                        <ui:Button x:Name="SelectDataButton"
                                   Background="#FF409EFF"
                                   Content="确认"
                                   MouseOverBackground="#66b1ff" Margin="10,0,0,0"
                                   Foreground="#E4FFFFFF"
                                   Click="OnClick" />
                    </StackPanel>
                    </ui:CardControl.Header>
                </ui:CardControl>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="卡号列号" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox Text="{Binding Sn_Column,Mode=TwoWay}" Width="100" Margin="0,0,10,0"></TextBox>
                        <TextBlock Text="芯片号列号" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox Text="{Binding Uid_Column,Mode=TwoWay}" Width="100"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                        <TextBlock Text="首行跳过" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <ui:ToggleSwitch IsChecked="{Binding IsSkipFirstRow,Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                        <TextBlock Text="转换格式" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <ComboBox
                            MinWidth="100"
                            HorizontalAlignment="Left"
                            SelectedItem="{Binding Convert, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SelectedIndex="0">
                            <ComboBoxItem Content="不转换" />
                            <ComboBoxItem Content="16进制调整"/>
                            <ComboBoxItem Content="16进制不调整" />
                            <ComboBoxItem Content="10进制调整" />
                            <ComboBoxItem Content="10进制不调整" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:Button Click="OK" Height="40" Width="80" Margin="0,30,0,0" Content="确认" Background="#67C23A" MouseOverBackground="#A8E063" Foreground="Azure"/>
                    </StackPanel>
                </StackPanel>
                
                
            </StackPanel>
        </Border>
    </Grid>
</Window>