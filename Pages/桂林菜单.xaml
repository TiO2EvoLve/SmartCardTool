<Window x:Class="WindowUI.Pages.桂林菜单"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="桂林公交附加菜单" Height="300" Width="500">
    <Grid>
        <Border BorderBrush="#FFF6F6F6" BorderThickness="5" CornerRadius="10,10,10,10" Margin="10"
                Background="#FFFEFEFE">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="请完善信息：" Margin="0,0,0,10" HorizontalAlignment="Center" />
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="制卡数据首序列号" VerticalAlignment="Center" />
                    <TextBox x:Name="SN" Width="200" Margin="10,0,0,0" Text="03104840298000069015" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="制卡数据八位数量" VerticalAlignment="Center" />
                    <TextBox x:Name="Count" Width="200" Margin="10,0,0,0" Text="00002000" />
                </StackPanel>
                <TextBlock FontSize="12" Foreground="Red" HorizontalAlignment="Center" Margin="0,20,0,20">tips:根据对应的批次数据而更改</TextBlock>
                <ui:Button Content="确定" Width="100" Click="ButtonBase_OnClick" HorizontalAlignment="Center"
                           Background="#67C23A" MouseOverBackground="#A8E063" Foreground="White" Margin="0,0,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>