<Window x:Class="WindowUI.Pages.漯河菜单"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowUI.Pages"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="漯河附加菜单" Height="300" Width="500">
    <Grid>
        <Border BorderBrush="#FFF6F6F6" BorderThickness="5" CornerRadius="10,10,10,10" Margin="10" Background="#FFFEFEFE">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="请完善信息：" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" >
                <TextBlock Text="卡类型" VerticalAlignment="Center"/>
                <ComboBox
                    x:Name="LuZhouCardType"
                    SelectionChanged="ComboBox_SelectionChanged"
                    MinWidth="300"
                    Margin="10,0,0,0"
                    SelectedIndex="0">
                    <ComboBoxItem Content="请选择卡类型" DataContext=""/>
                    <ComboBoxItem Content="普通卡" DataContext="08" />
                    <ComboBoxItem Content="学生卡" DataContext="09" />
                    <ComboBoxItem Content="员工卡" DataContext="07" />
                    <ComboBoxItem Content="英才卡" DataContext="07" />
                    <ComboBoxItem Content="敬老卡" DataContext="0A" />
                    <ComboBoxItem Content="爱心卡" DataContext="OB" />
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" >
                <TextBlock Text="英才卡首位号" VerticalAlignment="Center"/>
                <TextBox TextChanged="SN_OnTextChanged" IsEnabled="False" x:Name="SN" Width="200" Margin="10,0,0,0"></TextBox>
            </StackPanel>
            <ui:Button Content="确定" Width="100" Click="Button_Click"  HorizontalAlignment="Center" Background="#67C23A" MouseOverBackground="#A8E063" Foreground="White" Margin="0,30,0,0"></ui:Button>
        </StackPanel>
        </Border>
    </Grid>
</Window>
